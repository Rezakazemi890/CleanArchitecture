@page "/department/department-details/{DepartmentId:int}"

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">
            <i class="fas fa-users"></i> <strong>Department Details</strong>
        </h3>
    </div>
    <div class="card-body">
        @{
            if (DepartmentDetailsModel != null)
            {
                
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Department Name</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.DepartmentName
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Date Of Birth</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.Description
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">IsActive</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.IsActive
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">CreatedAtUtc</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.CreatedAtUtc
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">LastModifiedAtUtc</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @{
                                if (DepartmentDetailsModel.LastModifiedAtUtc != null)
                                {
                                    <span>@DepartmentDetailsModel.LastModifiedAtUtc</span>
                                }
                                else
                                {
                                    <span>Not modified yet.</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <em>Please wait! Data is loading.</em>
                </div>
            }
        }

    </div>
    <div class="card-footer">
        @{
            if (DepartmentDetailsModel != null)
            {
                <a href="department/update-department/@(DepartmentDetailsModel.DepartmentId)" class="btn btn-secondary">
                    <i class="fas fa-edit"></i>
                    Edit
                </a>
            }
        }

        <a href="department/department-list" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
</div>
@page "/department/delete-department/{DepartmentId:int}"

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">
            <i class="fas fa-trash-alt"></i> <strong>Delete Department</strong>
        </h3>
    </div>
    <div class="card-body">
        @{
            if (DepartmentDetailsModel != null)
            {
                <div class="alert alert-danger">
                    <em>Are you sure you want to delete this department?</em>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Department Name</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.Name
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Department Name</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.Description
                        </div>
                    </div>
                </div>
               
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">IsActive</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.IsActive
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">CreatedAtUtc</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @DepartmentDetailsModel.CreatedAtUtc
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">LastModifiedAtUtc</label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @{
                                if (DepartmentDetailsModel.LastModifiedAtUtc != null)
                                {
                                    <span>@DepartmentDetailsModel.LastModifiedAtUtc</span>
                                }
                                else
                                {
                                    <span>Not modified yet.</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <em>Please wait! Data is loading.</em>
                </div>
            }
        }

    </div>
    <div class="card-footer">
        @{
            if (DepartmentDetailsModel != null)
            {
                <EditForm class="d-inline-block" Model="DepartmentId" OnValidSubmit="HandleValidSubmit">
                    <button type="submit" class="btn btn-danger me-1"><i class="fas fa-trash-alt"></i> Delete</button>
                </EditForm>
            }
        }

        <a href="department/department-list" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
</div>